import PropTypes from "prop-types";
import { Button } from "./Button";
import arrow2 from "./Arrow.svg";
import arrow3 from "./Arrow.svg";
import arrow4 from "./Arrow.svg";
import arrow5 from "./Arrow.svg";
import image3 from "/banner/Banner.png";
import image4 from "/banner/Banner.png";

export const Banner = ({
  property1,
  overlapGroupClassName,
  imageClassName,
  image = "image-2.png",
  rectangleClassName,
  imageClassNameOverride,
  img = "image-1.png",
  divClassName,
  text = "Reach thousands of buyers with ease on JemezSpace.",
  buttonStateWhiteStrokeClassName,
  iconArrowClassName,
  iconArrow = "arrow.svg",
  iconArrowClassNameOverride,
  iconPxArrow = "image.svg",
}) => {
  return (
    <div className="w-[1240px] h-[255px] overflow-hidden rounded-[20px] bg-[#16a34a]">
      <div className={`-top-2.5 h-[265px] relative ${overlapGroupClassName}`}>
        {property1 === "one" && (
          <>
            <img
              className={`absolute w-[793px] h-[255px] top-2.5 left-[447px] object-cover ${imageClassName}`}
              alt="Image"
              src={image}
            />

            <div
              className={`absolute w-[1135px] h-[265px] top-0 left-0 [background:linear-gradient(180deg,rgb(22,163,74)_0%,rgb(249,115,22)_74.72%,rgba(249,115,22,0)_100%)] ${rectangleClassName}`}
            />

            <img
              className={`absolute w-[793px] h-[255px] top-2.5 left-[447px] object-cover ${imageClassNameOverride}`}
              alt="Image"
              src={img}
            />

            <p
              className={`absolute w-[709px] top-11 left-[122px] [font-family:'SF_Pro_Display-Bold',Helvetica] font-bold text-white text-[42.5px] tracking-[0] leading-[normal] ${divClassName}`}
            >
              {text}
            </p>
          </>
        )}

        {["three", "two"].includes(property1) && (
          <>
            <img
              className={`top-2.5 h-[255px] absolute ${property1 === "three" ? "w-[491px]" : "w-[559px]"} ${property1 === "three" ? "left-[749px]" : "left-[681px]"} ${property1 === "three" ? "object-cover" : ""}`}
              alt="Image"
              src={property1 === "three" ? image3 : image4}
            />

            <div
              className={`left-0 top-0 h-[265px] absolute ${property1 === "three" ? "[background:linear-gradient(180deg,rgb(249,115,22)_0%,rgb(22,163,74)_81.01%,rgba(22,163,74,0)_100%)]" : "[background:linear-gradient(180deg,rgb(231,119,26)_59.07%,rgb(131.39,172.34,3.8)_90.58%,rgba(131,172,4,0)_100%)]"} ${property1 === "three" ? "w-[971px]" : "w-[923px]"}`}
            />

            <div className="[font-family:'SF_Pro_Display-Bold',Helvetica] w-[709px] left-[122px] tracking-[0] text-[42.5px] top-11 text-white font-bold leading-[normal] absolute">
              {property1 === "two" && (
                <p>Unlock More with JamezSpace Premium Plans</p>
              )}

              {property1 === "three" && (
                <p>
                  Start conversations and arrange convenient meetups near you.
                </p>
              )}
            </div>
          </>
        )}

        <Button
          buttonText={
            property1 === "three"
              ? "Find Out How"
              : property1 === "one"
                ? "Start Selling"
                : "Explore Plans"
          }
          className={
            property1 === "one"
              ? buttonStateWhiteStrokeClassName
              : "!absolute !left-[122px] !top-[173px]"
          }
          icon={false}
          state="white-stroke"
        />

        {["three", "two"].includes(property1) && (
          <>
            <img
              className="w-16 left-6 top-[105px] h-16 absolute"
              alt="Icon arrow"
              src={property1 === "three" ? arrow4 : arrow2}
            />

            <img
              className="w-16 left-[1152px] top-[105px] h-16 absolute"
              alt="Icon arrow"
              src={property1 === "three" ? arrow5 : arrow3}
            />
          </>
        )}

        {property1 === "one" && (
          <>
            <img
              className={`left-6 absolute w-16 h-16 top-[105px] ${iconArrowClassName}`}
              alt="Icon arrow"
              src={iconArrow}
            />

            <img
              className={`left-[1152px] absolute w-16 h-16 top-[105px] ${iconArrowClassNameOverride}`}
              alt="Icon arrow"
              src={iconPxArrow}
            />
          </>
        )}
      </div>
    </div>
  );
};

Banner.propTypes = {
  property1: PropTypes.oneOf(["two", "three", "one"]),
  image: PropTypes.string,
  img: PropTypes.string,
  text: PropTypes.string,
  iconArrow: PropTypes.string,
  iconPxArrow: PropTypes.string,
};
